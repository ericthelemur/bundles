{
  "name": "nodecg-dono-control",
  "version": "1.0.0",
  "description": "",
  "homepage": "",
  "author": {
    "name": "ericthelemur",
    "email": "owenconnors1@gmail.com",
    "url": ""
  },
  "nodecg": {
    "compatibleRange": "^2.0.0",
    "bundleDependencies": {
      "nodecg-tiltify": "*"
    },
    "dashboardPanels": [
      {
        "name": "dono-reader",
        "title": "Donation Reader",
        "file": "reader.graphic.html",
        "fullbleed": true,
        "headerColor": "#525F78"
      }
    ],
    "graphics": [
      {
        "file": "alerts.graphic.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      }
    ]
  },
  "scripts": {
    "start": "cd ../.. && node -r source-map-support/register index.js",
    "build": "node ../wasd-common/shared/scripts/build.mjs nodecg-dono-control",
    "watch": "node ../wasd-common/shared/scripts/build.mjs nodecg-dono-control --watch",
    "clean": "node ../wasd-common/shared/scripts/build.mjs nodecg-dono-control --clean-only",
    "types": "nodecg schema-types",
    "nodemon": "nodemon --config ../wasd-common/shared/nodemon.json",
    "dev": "concurrently --kill-others \"npm run watch -- --types\" \"npm run watch -- --browser\" \"npm run nodemon\""
  },
  "dependencies": {
    "bootstrap-icons": "^1.11.3",
    "react": "^18.0.0",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.0.0",
    "react-toastify": "^9.1.3",
    "ts-node": "^10.9.1",
    "use-nodecg": "github:vmichalak/use-nodecg",
    "wasd-common": "1.0.0"
  },
  "devDependencies": {
    "@nodecg/types": "^2.0.0",
    "@parcel/config-default": "*",
    "@parcel/core": "*",
    "@parcel/reporter-cli": "*",
    "@parcel/validator-typescript": "*",
    "@types/node": "^18",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "trash-cli": "*",
    "typescript": "^5.1.3"
  },
  "license": "MIT"
}